<h1 class="h3 mb-3 text-gray-800"><%= " #{ action_message } administradores" %></h1>

<% if @question.errors.any? %>
<div class="alert alert-danger" role="alert">
    <% @question.errors.full_messages.each do |mensagens| %>
      <li><%= mensagens %> </li>
    <% end %>
</div>
<% end %>

<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary"> <%= " #{ action_message } administradores" %></h6>
  </div>
  <div class="card-body">
    <%= form_with(model: [ :admins_backoffice, @question ], local: true) do |form| %>
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: "form-control", placeholder: "Descrição da pergunta...", rows: "6" %>
      </div>

      <div class="form-group">
        <%= form.label :subject_id %>
        <%= form.collection_select(:subject_id, @subjects, :id, :description, {}, class: "form-control") %>
      </div>

      <button type="submit" class="btn btn-outline-primary">Submit Button</button>
    <% end %>
  </div>
</div>
