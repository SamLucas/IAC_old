 <div class="card">
   <div class="card-body">
    <%= form_with(model: site_text, local: true) do |form| %>
    <% if site_text.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(site_text.errors.count, "error") %> prohibited this site_text from being saved:</h2>
   
      <ul>
        <% site_text.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
   
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
   
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control textarea"%>
    </div>
   
    <div class="form-group">
      <%= form.label :identification %>
      <%= form.text_field :identification, class: "form-control" %>
    </div>
   
    <div class="form-group actions">
      <%= form.submit "Enviar", class: "btn btn-success" %>
    </div>
    <% end %>
   </div>
 </div>