<div class="page-breadcrumb">
  <div class="row">
    <div class="col-12 d-flex no-block align-items-center">
      <h4 class="page-title">New Adnins Member</h4>
      <div class="ml-auto text-right">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Library</li>
          </ol>
        </nav>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">

      <% if notice %>
      <div class="alert alert-success" role="alert">
        <p id="notice"><%= notice %></p>
      </div>
      <% end %>

      <div class="card">
        <div class="card-body">
          <h3 class="card-title my-3"><%= @disclosure.title %></h3>
          <p><%= @disclosure.description %></p>
          <%= @disclosure.textnew.html_safe %>


          <p>
            <strong>Author:</strong>
            <%= @disclosure.author %>
          </p>        

          <p>
            <strong>Active:</strong>
            <%= @disclosure.active %>
          </p>      

          <div class="ml-auto text-right">
            <%= link_to 'Edit', edit_disclosure_path(@disclosure), class: "btn btn-primary" %>
            <%= link_to 'Back', disclosures_path, class: "btn btn-primary" %>

          </div>

        </div>
      </div>
    </div>
  </div>
</div>
